<resources>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <!-- Base application theme, v14+. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/sebastiaan_blue</item>
        <item name="colorPrimaryDark">@color/sebastiaan_blue</item>
        <item name="colorAccent">@color/sebastiaan_green</item>
        <item name="android:tint">@color/sebastiaan_blue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="preferenceTheme">@style/AppPrefsOverlay</item>
        <item name="list_card_style">@style/ListItem</item>
        <!-- colorControlHighlight: ripple effect. -->
        <item name="colorControlHighlight">#80d0d0d0</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme">
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppToolbarPopup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppCollapsedTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppExpandedTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="NavigationItem" parent="android:TextAppearance.Holo.Large">
        <item name="android:paddingTop">@dimen/navigation_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/navigation_item_vertical_padding</item>
        <item name="android:layout_marginTop">@dimen/navigation_item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_item_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@drawable/navigation_item_textcolor</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListItem">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="AppPrefsOverlay" parent="PreferenceThemeOverlay">
        <item name="android:background">@android:color/white</item>
        <item name="android:colorForeground">#FF808080</item>
        <item name="colorAccent">@color/sebastiaan_blue</item>
    </style>

    <!-- same as @android/background_material_light on SDK21+ -->
    <color name="windowBackground">#ffeeeeee</color>
    <color name="sebastiaan_blue">#ff31b5e7</color>
    <color name="sebastiaan_green">#ffbccf02</color>
</resources>
