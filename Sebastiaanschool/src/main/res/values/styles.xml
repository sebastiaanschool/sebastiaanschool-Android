<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:popupMenuStyle">@style/AppPopupMenu</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Example.Widget</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/sebastiaan_blue</item>
        <item name="android:titleTextStyle">@style/AppActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/AppActionBarSubtitleText</item>
    </style>

    <style name="AppActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppActionBarSubtitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppPopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/actionbar_dropdown_panel</item>
    </style>

    <style name="Theme.Example.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/AppPopupMenu</item>
    </style>

    <style name="SlidingFragment">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="NavigationFragment" parent="SlidingFragment">
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

    <style name="NavigationItem" parent="android:TextAppearance.Holo.Large">
        <item name="android:paddingTop">@dimen/navigation_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/navigation_item_vertical_padding</item>
        <item name="android:layout_marginTop">@dimen/navigation_item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_item_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:textColor">@drawable/navigation_item_textcolor</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListFragment" parent="SlidingFragment">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:divider">#FFC8C8C8</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ListItem.Bulletin">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ListItemTitle" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemTitle.Bulletin" parent="ListItemTitle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListItemDate" parent="android:TextAppearance.Holo.Small">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemDate.Bulletin" parent="ListItemDate">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListItemText" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
    </style>

    <style name="ListItemText.Bulletin" parent="ListItemText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <color name="sebastiaan_blue">#31b5e7</color>
    <color name="hsl_shadow_color">#11526b</color>
    <integer name="hsl_animation_duration">300</integer>
</resources>
