<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/sebastiaan_blue</item>
        <item name="colorPrimaryDark">@color/sebastiaan_blue</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppToolbarPopup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppCollapsedTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppExpandedTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SlidingFragment">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SlidingFragment.WithMargins">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="NavigationFragment">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

    <style name="NavigationItem" parent="android:TextAppearance.Holo.Large">
        <item name="android:paddingTop">@dimen/navigation_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/navigation_item_vertical_padding</item>
        <item name="android:layout_marginTop">@dimen/navigation_item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_item_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:textColor">@drawable/navigation_item_textcolor</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListFragment" parent="SlidingFragment.WithMargins">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:divider">#FFC8C8C8</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ListItem.Bulletin">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ListItemTitle" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemTitle.Bulletin" parent="ListItemTitle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListItemDate" parent="android:TextAppearance.Holo.Small">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemDate.Bulletin" parent="ListItemDate">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListItemText" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@drawable/list_item_textcolor</item>
    </style>

    <style name="ListItemText.Bulletin" parent="ListItemText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- same as @android/background_material_light on SDK21+ -->
    <color name="windowBackground">#ffeeeeee</color>
    <color name="sebastiaan_blue">#31b5e7</color>
    <integer name="hsl_animation_duration">300</integer>
</resources>
